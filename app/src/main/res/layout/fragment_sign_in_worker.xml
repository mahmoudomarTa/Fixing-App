<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@drawable/on_bording_background"
    android:layout_height="match_parent"
    tools:context=".authentication.SignInWorkerFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="@string/phoneNumber"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edPhoneNumberSIW"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/text_views_background"
            android:ems="10"
            android:hint="@string/exMobileNumber"
            android:inputType="phone"
            android:padding="14dp"
            android:textSize="14sp"
            android:textDirection="locale"
            android:textAlignment="textEnd"
            android:paddingStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/password"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@+id/edPhoneNumberSIW"
            app:layout_constraintTop_toBottomOf="@+id/edPhoneNumberSIW" />



        <EditText
            android:id="@+id/edPasswordSIW"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/text_views_background"
            android:ems="10"
            android:hint="********"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textDirection="locale"
            android:textAlignment="viewStart"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <ImageView
            android:id="@+id/imgShowHidePasswordSIW"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="50dp"
            android:src="@android:drawable/btn_dialog"
            app:layout_constraintBottom_toBottomOf="@+id/edPasswordSIW"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/edPasswordSIW" />

        <TextView
            android:id="@+id/tvForgetPasswordSIW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/forgetPassword"
            app:layout_constraintEnd_toEndOf="@+id/edPasswordSIW"
            app:layout_constraintTop_toBottomOf="@+id/edPasswordSIW" />

        <Button
            android:id="@+id/btnSignInWorker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:text="@string/signIn"
            android:background="@drawable/btn_solid"
            android:textColor="#fff"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvForgetPasswordSIW"
            app:layout_constraintVertical_bias="0.18" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>